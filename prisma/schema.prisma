generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Collection {
  id        String   @id @default(uuid())
  name      String
  userId    String
  color     String
  createdAt DateTime @default(now())
  tasks     Task[]

  @@unique([name, userId])
}

model Task {
  id        String    @id @default(uuid())
  content   String
  userId    String
  done      Boolean   @default(false)
  expiresAt DateTime?
  createdAt DateTime  @default(now())

  collectionId String
  Collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
}
